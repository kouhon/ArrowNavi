<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.komegu.arrownavi"
      android:versionCode="1"
      android:versionName="1.0.0">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name="com.komegu.arrownavi.ArrowNaviApplication"
        android:theme="@android:style/Theme.NoTitleBar">

        <activity android:name="com.komegu.arrownavi.Activity.ArrowNaviSplashActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.komegu.arrownavi.Activity.ArrowNaviInductionActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.komegu.arrownavi.Activity.ArrowNaviSettingDstActivity"
            android:label="@string/app_name"/>

    </application>
</manifest>